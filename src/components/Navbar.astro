---
const navLinks = [
  {
    href: "/programs/",
  },
  {
    href: "/courses/",
  },
  {
    href: "/facilities/",
  },
  {
    href: "/blogs/",
  },
]
const dropLinks = [
  {
    href: "/peoples/",
  },
  {
    href: "/about/",
  },
  {
    href: "/contact/",
  },
]
---

<!-- width="350"
height="45"
