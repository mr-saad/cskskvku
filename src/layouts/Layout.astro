---
import { ClientRouter } from "astro:transitions"
import Navbar from "../components/Navbar.astro"
import Footer from "../components/Footer.astro"
import "../globals.css"
export const URL = "https://cskskvku.vercel.app"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="computer science, department, kskv, kskvku, kachchh university, msc ca it, msc it, pgdca, kachchh, university, it career, information technology, Master of Computer Science, post graduate diploma, integrated course, cskskvku.vercel.app"
    />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="English" />
    <meta name="author" content="Saad Khatri" />
    <meta
      name="google-site-verification"
      content="lBrFwP_GaamILlVDGRzoEvN5aWFGrX0sKu5zttr_T7c"
    />
    <meta
      name="title"
      content={`${Astro.props.title} | KSKV Kachchh University`}
    />
    <meta
      name="description"
      content={`${
        Astro.request.url !== "/" && Astro.props.title + " | "
      }Department of Computer Science KSKV Kachchh University`}
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta
      property="og:title"
      content={`${Astro.props.title} | KSKV Kachchh University`}
    />
    <meta
      property="og:description"
      content={`${
        Astro.request.url !== "/" && Astro.props.title + " | "
      }Department of Computer Science KSKV Kachchh University`}
    />
    <meta property="og:image" content="/home_sc.jpg" />
    <meta property="twitter:card" content="/home_sc.jpg" />
    <meta property="twitter:url" content={Astro.url} />
    <meta
      property="twitter:title"
      content={`${Astro.props.title} | KSKV Kachchh University`}
    />
    <meta
      property="twitter:description"
      content={`${
        Astro.request.url !== "/" && Astro.props.title + " | "
      }Department of Computer Science KSKV Kachchh University`}
    />
    <meta property="twitter:image" content="/home_sc.jpg" />
    <title>{Astro.props.title} | KSKV Kachchh University</title>
    <script is:inline>
       document.documentElement.classList.toggle("dark", localStorage.getItem("theme") === "dark")
    </script>
    <script defer src="/navEvents.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
   <!--  <script>
      const theme = localStorage.getItem("theme")
      theme === "dark"
        ? document.querySelector(".theme .inner").classList.add("dark")
        : null
    </script> -->
    <link
      rel="preload"
      type="image/webp"
      as="image"
      href="/logo_kskvku_new.webp"
    />
    <link
      rel="preload"
      type="image/webp"
      as="image"
      href="/logo_kskvku_new_white.webp"
    />
    <link rel="canonical" href={Astro.url} />
    <slot name="homeBg" />
    <ClientRouter />
  </head>
  <body>
    <Navbar />
    <main style="min-height: 85vh; padding-block: 1rem;">
      <slot />
    </main>
    <Footer />
  </body>
</html>
