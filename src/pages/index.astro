---
import Layout from "../layouts/Layout.astro"
import { xata } from "../xata"
const programs = await xata.db.Programs.select([
  "Title",
  "Description",
  "Href"
]).getAll()
---

<Layout title="Department of Computer Science">
  <link
    slot="homeBg"
    rel="preload"
    type="image/webp"
    as="image"
    href="/bg.webp"
  />
  <header class="container">
    <img
      alt="DOCS Background Image"
      loading="eager"
      decoding="async"
      src="bg.webp"
    />
    <h1 style="line-height: 1;">Department of Computer Science</h1>
    <p style="margin-block: .5rem;font-size: 1.2rem;">
      Krantiguru Shyamji Krishna Verma Kachchh University
    </p>
    <a aria-label="Scroll Down" title="Scroll Down" href="#programs">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="44"
        height="44"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"><path d="m6 9 6 6 6-6"></path></svg
      >
    </a>
  </header>
  <div id="programs" class="container">
    <h2 class="heading">Programs We Offer</h2>
    <div class="grid">
      {
        programs.map(({ Title, Description, Href }) => (
          <div class="course">
            <h3>{Title}</h3>
            <p>{Description}</p>
            <a class="btn" href={`/programs/#${Href}`}>
              Know More
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  header.container {
    margin-bottom: 5rem;
    max-width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 91vh;
    color: #fff;
    text-align: center;
    position: relative;
    background: rgba(0, 0, 0, 0.4);
  }
  header > img {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  header a {
    color: #fff;
  }
  #programs {
    scroll-margin: 1rem;
  }
  .grid {
    margin-block: 2rem;
    gap: 3rem;
  }
  .course {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border-radius: 0.3rem;
    background-color: rgb(0 0 0 / 0.1);
    box-shadow: 0 5px 20px var(--box-shadow);
  }
  html.dark .course {
    background-color: rgb(255 255 255 / 0.1);
  }
  .course h3 {
    color: var(--accent);
  }
  .course p {
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    line-clamp: 4;
  }
  .course .btn {
    align-self: start;
    margin-top: auto;
  }
  .course p {
    margin-bottom: 0.5rem;
  }
  @media (max-width: 768px) {
    header.container {
      min-height: 85vh;
    }
  }
</style>
